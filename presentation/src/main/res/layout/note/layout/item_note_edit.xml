<?xml version="1.0" encoding="utf-8"?>
<com.crazysunj.crazydaily.view.photo.PhotoPickerWrapLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_note_edit_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_5"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/space_5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_note_edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/space_12"
        android:src="@mipmap/ic_delete_two" />
</com.crazysunj.crazydaily.view.photo.PhotoPickerWrapLayout>