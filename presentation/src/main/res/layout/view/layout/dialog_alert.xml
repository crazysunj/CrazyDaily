<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_alert_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_alert_message"
        style="@style/text_18_666666"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_120"
        android:gravity="center"
        tools:text="将此次笔记保存?" />

    <View style="@style/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_alert_button_negative"
            style="@style/text_20_333333"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="不保存" />

        <View style="@style/vertical_line" />

        <TextView
            android:id="@+id/dialog_alert_button_positive"
            style="@style/text_20_333333"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="保存" />
    </LinearLayout>

</LinearLayout>